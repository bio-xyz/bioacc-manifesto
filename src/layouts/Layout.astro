---
import '@fontsource/ibm-plex-mono/300.css'
import '@fontsource/ibm-plex-mono/400.css'
import '@fontsource/ibm-plex-mono/500.css'
import '@fontsource/ibm-plex-mono/600.css'
import '@/styles/globals.css'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="bio/acc manifesto" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="text-white dark">
    <div class="min-h-screen flex flex-col">
      <header class="p-4 text-primary">foo</header>

      <main
        class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-8 space-y-12"
        id="content-wrapper"
      >
        <div class="max-w-3xl mx-auto">
          <slot />
        </div>
        <section class="bg-[#131313] mx-auto px-4 sm:px-6 lg:px-8 py-8">
          <div class="max-w-3xl mx-auto">
            <slot name="post-actions" />
          </div>
        </section>
      </main>

      <footer class="p-4 text-center">
        <p>Footer content</p>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --body-background: #000;
    --color-actionbg: #131313;

    --color-primary: #eeff00;
    --color-secondary: #ffed4a;
    --color-accent: #f6993f;
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    /* font-family: system-ui, sans-serif; */
    font-family: 'IBM Plex Mono', monospace;
    background: #000000;
    background-size: 224px;
  }
</style>
